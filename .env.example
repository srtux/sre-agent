# For Google AI Studio (simpler setup)
# GOOGLE_GENAI_USE_VERTEXAI=0
# GOOGLE_API_KEY=<your-Google-Gemini-API-key>

# For Google Cloud Vertex AI (production)
GOOGLE_GENAI_USE_VERTEXAI=1
GOOGLE_CLOUD_PROJECT=<your_gcp_project>
GOOGLE_CLOUD_LOCATION=us-central1

# Telemetry & Logging Configuration
# OTEL_INSTRUMENTATION_GENAI_CAPTURE_MESSAGE_CONTENT=true  # Enable high-fidelity ADK prompt/response logging
# LOG_SYSTEM_INSTRUCTIONS=false                             # Hide massive system instructions in logs
# SUPPRESS_OTEL_ERRORS=true                                 # Hide OTLP export noise

# Cloud Trace Configuration (optional - defaults to GOOGLE_CLOUD_PROJECT)
# TRACE_PROJECT_ID=<your_trace_project_id>
# TRACER_PROJECT_ID=<your_trace_project_id>

# Arize / OpenInference Configuration (optional)
USE_ARIZE=false
SRE_AGENT_ENFORCE_POLICY=true
ARIZE_SPACE_ID=<your_arize_space_id>
ARIZE_API_KEY=<your_arize_api_key>
ARIZE_PROJECT_NAME=AutoSRE
GEMINI_API_KEY=<your_gemini_api_key_or_google_api_key>
